<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     
      <h2>プロフィール編集</h2>
  <!--バリテーション-->
      <% if @user.errors.any? %>
        <%= @user.errors.count %> error prohibited this obj from being saved: 
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      
      <%= form_with model:@user do |f| %>
      
        <div class="form-group">
          <%= f.label :name, "名前" %>  
          <%= f.text_field :name, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :image, "Image" %>
        <br>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
        </div>
        
        <div class="form-group">
          <%= f.label :Introduction, "ひとこと" %>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
        
        <div>
          <%= link_to edit_user_path(@user), method: :get, class:"nav-link text-light" do %>
            <i class="fa-solid fa-folder-plus"></i> 更新
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
