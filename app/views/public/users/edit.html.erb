<div class="container">
  <div class="row">
    <div class="col-sm-11 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <p class="mi">プロフィール編集</p>
     <div class="b-image"><%= image_tag  "rabya.png", size:"100x100" %></div>
  <!--バリテーション-->
      <% if @user.errors.any? %>
        <%= @user.errors.count %> error prohibited this obj from being saved: 
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      
      <%= form_with model:@user do |f| %>
      
        <div class="form-group">
          <%= f.label :name, "名前" %>  
          <%= f.text_field :name, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :image, "Image" %>
        <br>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
        </div>
        
        <div class="form-group">
          <%= f.label :Introduction, "ひとこと" %>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
        <div class="text-right">
        <nav>
        <%= link_to "退会する", user_withdrawal_path(current_user) , method: :patch, class: "btn-stitch" %>
        <%= f.submit "更新", class: "btn-stitch" %>
        </nav>
      <% end %>
      </div>
      <div class="b-image"><%= image_tag  "abela.png", size:"100x100" %></div>
    </div>
  </div>
</div>
