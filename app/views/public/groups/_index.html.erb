
<table class='table'>
  <thead>
    <tr>
      <th style="width: 7%"></th>
      <th style="width: 18%">グループ名</th>
      <th style="width: 5%"></th>
      <th style="width: 40%">ひとこと</th>
      <th style="width: 13%"></th>
      <th style="width: 17%"></th>
    </tr>
  </thead>
  <tbody>
    <% groups.each do |group| %>
      <tr>
        <td>
          <% if group.group_image.attached? %>
            <%= image_tag group.group_image,size:"50x50" %>
          <% else %>
            <%= image_tag asset_path('no_image') , size: "50x50" %>
          <% end %>
        </td>
        <td><%= link_to group.name,group_path(group) %></td>
          <td>
         <% if group.is_owned_by?(current_user) && group.permits.present? %>
            <%= link_to public_group_permits_path(group), class: "btn-stitch" do %>
              <i class="fa-solid fa-user-check"></i>
            <% end %>
          <% end %>
        </td>
        <td><%= group.introduction %></td>
          <td><%= link_to '編集', edit_group_path(group), class: "group_#{group.id} btn-stitch" %></td>
          <td><%= link_to 'イベント',group_events_path(group),class: " btn-stitch" %></td>
      </tr>
    <% end %>
  </tbody>
</table> 
