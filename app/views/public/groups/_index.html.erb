<div class="pc">
  <table class='table'>
    <thead>
      <tr>
        <th style="width: 10%"></th>
        <th style="width: 20%">グループ名</th>
        <th style="width: 5%"></th>
        <th style="width: 50%">ひとこと</th>
        <th style="width: 15%"></th>
      </tr>
    </thead>
    <tbody>
      <% groups.each do |group| %>
        <tr>
          <td>
            <% if group.group_image.attached? %>
              <%= image_tag group.group_image,size:"50x50" %>
            <% else %>
              <%= image_tag 'no_image', size: "50x50" %>
            <% end %>
          </td>
          <td><%= link_to group.name,group_path(group) %></td>
          <td><%= link_to "＋", new_group_path(group), class: "group_#{group.id} btn-stitch" %></td>
          <td><%= group.introduction %></td>
          <% if group.is_owned_by?(current_user) %>
            <td><%= link_to '編集', edit_group_path(group), class: "group_#{group.id} btn-stitch" %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table> 
</div>    
