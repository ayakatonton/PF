<div class="container mt-4">
  <div class="row">
    <div class="col-md-4 mx-auto ">
      <p class="mi">グループメンバー</p><%= group.groupusers.count %>
      
      <% @group.users.each do |user| %>
      　　<li style="list-style: none;"><%= user.name %></li>
      <% end %>
      <!--<a href="%= groups_path %>" class="btn-stitch">グループのみんな</a>-->
      <!--グル名をボタンにしてグルメン一覧にしたい-->
      
      <% if @group.is_owned_by?(current_user) %>
      　　<%= link_to 'くわしく', edit_group_path(@group), class: "btn-stitch" %>
      <% elsif @group.includesUser?(current_user)%>
      　　<%= link_to '仲間からぬける', group_group_users_path(@group), method: :delete, class: "btn-stitch" %>
      <% else %>
      　　<%= link_to '仲間にはいる', group_group_users_path(@group), method: :post, class: "btn-stitch" %>
      <% end %>
    </div>
  </div>
</div>