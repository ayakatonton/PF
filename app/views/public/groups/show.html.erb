<div class="container mt-4">
  <div class="row">
    <div class="col-md-11 mx-auto ">
      <p class="mi">なかま</p>
      <div class= "left"><i class="fa-solid fa-users"></i> <%= @group.group_users.count %></div>
      <h3><p class="kase text-center"><%= @group.name %></p></h3>
       <div class= "text-center">
        <% @group.users.each do |user| %>
        　　<li style="list-style: none;"><%= link_to user.name,user_path(user) %></li>
        <% end %>
        
      <% if @group.is_owned_by?(current_user) %>
      　　<%= link_to '編集', edit_public_group_path(@group), class: "btn-stitch" %>
      <% elsif @group.includesUser?(current_user)%>
      　　<%= link_to '仲間からぬける', public_group_group_users_path(@group, user_id: current_user.id), method: :delete, class: "btn-stitch" %>
      <% else %>
      　　<%= link_to '仲間にはいる', public_group_permits_path(@group), method: :post, class: "btn-stitch" %>
      <% end %>
      </div>
    </div>
    <div class="b-image"><%= image_tag  "aberab.png", size:"350x400" %></div>
  </div>
</div>