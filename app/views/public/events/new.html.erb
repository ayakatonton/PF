<div class="container mt-4">
  <div class="row">
    <div class="col-md-10 mx-auto  text-center">
      <p class="mi">イベント追加</p>
      
      <!--予定作成フォーム-->
        <p>イベント名</p>
        <%= form_with model: Event.new do |f| %>
          <%= f.text_field :title, class:'form-control mb-3', required: true, placeholder: "イベントを入力" %>
        </div>
      </div>
        <div class="row　mb-1 ">
          <div class="col-6 ml-5">
            <p>日付け</p>
            <%= f.date_field :event_date, as: :datetime_picker, class: "w-80" %>
          </div>
        </div>
        <div class="row">
          <div class="col-10 ml-5">
            <p>グループ</p>
            <%= f.select :group_id, current_user.groups.map{|group| [group[:name], group[:id]]}, {}, {class: 'custom-select'} %>
          </div>
        </div>
        <div class="row">
          <div class="col-3 mt-3 ml-5">
              <%= f.button "イベント追加",class:"btn-stitch" %>
            <% end %>
          </div>
        </div>
       <div class="row">
        <div class="col-3 mt-3 ml-5">   
      <a href="<%= public_calendar_index_path%>" class="btn-stitch">戻る</a>
        </div>
      </div>
    </div>
  </div>
</div>