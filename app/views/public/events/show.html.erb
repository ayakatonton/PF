<div class='container px-lg-5 px-sm-0'>
   <div class='row'>
    <div class='col-lg-10 mx-auto col-sm-12'>
      <p class="mi"><%= @event.title %></p>
      <nav>
        <p class="kase"><%= @event.event_date %></p>
        <p class="kase"><%= @event.group.name %></p>
       </nav>
      <% if @event.schedules.present? %>
        <table class='table'>
          <thead>
            <tr>
              <th>開始時間</th>
              <th>終了時間</th>
              <th></th>
              <th>予定名</th>
            </tr>
          </thead>
          <tbody>
            <% @event.schedules.each do |schedule| %>
            <tr>
             <td style="width: 20%"><%= schedule.start_time.strftime("%H時%M分") %></td>
             <td style="width: 20%"><%= schedule.end_time.strftime("%H時%M分") %></td>
              <td style="width: 10%"></td>
              <td style="width: 50%"><%= link_to schedule.title, edit_event_schedule_path(@event, schedule) %></td>
            </tr>
            <% end %>
        </tbody>
      </table> 
      <% else %>
        <P class="text-center">スケジュールがありません</P>
      <% end %>
      <a href="<%= new_event_schedule_path(@event) %>" class="btn-stitch">＋</a><!-- 新しい予定を作成するリンク -->
    </div>
  </div>
</div>