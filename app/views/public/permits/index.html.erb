<div class='row'>
  <div class='col-lg-10 mx-auto col-sm-12'>
    <p class="mi">なかま申請</p>
    <table class='table'>
    <thead>
      <tr>
        <th></th>
        <th></th>
        <th>グループ名</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    </table>
    <% @group.each do |group| %>
      <tr>
        <td>
          <% if group.group_image.attached? %>
            <%= image_tag group.group_image,size:"50x50" %>
          <% else %>
            <%= image_tag 'no_image', size: "50x50" %>
          <% end %>
        </td>
        <td><%= group.name %></td>
        <td>
        <% if @group.group_users.exists?(user_id: current_user.id) %>
          <%= link_to '仲間からぬける', group_group_users_path(@group), method: :delete, class: "btn-stitch", data: { confirm: "本当にグループを退出しますか？" } %>
        <% elsif @group.permits.exists?(user_id: current_user.id) %>
          <%= link_to 'とりけし', public_group_permits_path(@group, current_user), method: :delete, class: "btn-stitch" %>
        <% else %>
          <%= link_to '仲間にはいる', public_group_permits_path(@group), method: :post, class: "btn-stitch" %>
        <% end %>
    <% end %>
        </td>
      </tr>
    
    <% if @group.owner_id == current_user.id %>
      <div class="dropdown">
        <button class="btn btn-sm btn-secondary dropdown-toggle"
                type="button" id="dropdownMenu1" data-toggle="dropdown"
                aria-haspopup="true" aria-expanded="false">
        
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenu1">
          <%= link_to "承認待ち一覧", permits_path(@group),  class: "btn-stitch" %> 
          <%= link_to 'グループ編集', edit_group_path(@group),  class: "btn-stitch" %>
          <%= link_to 'グループ削除', group_path(@group), method: :delete,  class: "btn-stitch", data: { confirm: "本当に削除しますか？" } %>
        </div>
      </div>
    <% end %>
  </div>
</div>