<div class="pc">
  <footer>
    <%= image_tag  "logo.jpg",size:"155x45" %>  
 </footer>
</div>

<div class="su">
  <footer>
    <nav>
      <ul>
        <!--ログインしている時ユーザー-->
        <% if user_signed_in? %>
          <%= link_to root_path(current_user), class:"nav-link text-light" do %>
            <i class="fa-solid fa-house"></i>
          <%end%>
          <%= link_to public_calendar_index_path, class:"nav-link text-light" do %>
            <i class="fa-solid fa-calendar-days"></i>
          <% end %>
          <%= link_to groups_path, class:"nav-link text-light" do %>
            <i class="fa-solid fa-users"></i>
          <% end %>
          <%= link_to event_bookmarks_index_path, class:"nav-link text-light" do %>
            <i class="fa-solid fa-calendar-check"></i>
          <% end %>
      <!--アドミンがログインしてる時 -->
        <% elsif admin_signed_in? %>
          <%= link_to root_path, class:"nav-link text-light" do %>
            <i class="fa-solid fa-house"></i>
          <% end %>
          <%= link_to users_path, class:"nav-link text-light" do %>
            <i class="fa-solid fa-tag"></i>
          <% end %>
          <%= link_to photos_path, class:"nav-link text-light" do %>
            <i class="fa-regular fa-image"></i>
          <% end %>
          <%= link_to destroy_admin_session_path, method: :delete, class:"nav-link text-light" do %>
            <i class="fa-solid fa-right-from-bracket"></i>
          <% end %> 
          
          <!--ログインしていない時  -->
        <% else %>
          <%= link_to root_path, class:"nav-link text-light" do %>
            <i class="fa-solid fa-house"></i>
          <% end %>
          <%= link_to public_calendar_index_path, class:"nav-link text-light" do %>
            <i class="fa-regular fa-calendar-check"></i>
          <% end %>
          <%= link_to about_path, class:"nav-link text-light" do %>
            <i class="fa-solid fa-tag"></i>
          <% end %>
          <%= link_to new_user_session_path, class:"nav-link text-light" do %>
            <i class="fa-solid fa-right-to-bracket"></i>
          <% end %> 
        <% end %>
      </ul>
    </nav> 
 </footer>
</div>
 