<%= form_with(url: admin_groups_path, method: :get) do |form| %>
  <%= form.text_field :search, placeholder: "グループを検索" %>
  <%= form.submit "検索" %>
<% end %>

<table>
  <thead>
    <tr>
      <th></th>
      <th>ID</th>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td>
          <% if group.group_image.attached? %>
            <%= image_tag group.group_image,size:"50x50" %>
          <% else %>
            <%= image_tag 'no_image', size: "50x50" %>
          <% end %>
        </td>
        <td><%= group.id %></td>
        <td><%= link_to group.name %></td>
        <td><%= link_to "Delete", admin_user_path(user), method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>